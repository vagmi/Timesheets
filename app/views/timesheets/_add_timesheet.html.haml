%tr
  %td
    = select_tag "timeentry[][project_id]", options_from_collection_for_select(@projects, "id", "name"), {:class => "select-box"}
  %td= select_tag "timeentry[][category_id]", options_from_collection_for_select(@categories, "id", "name"), {:class => "select-box"}
  %td= text_field_tag "timeentry[][description]"
  %td= text_field_tag "timeentry[][minutes]"
  %td= check_box "timeentry[][billable]", nil
  - counter = (counter.nil?) ? 1 : counter + 1
  %td{:id => "new-#{counter}"}= link_to 'X', 'javascript:;', :onclick => "remove_row(#{counter});"